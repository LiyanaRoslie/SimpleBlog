<div class = "main-container">
  <% if article.errors.any? %>
  <div class="form-group row">
    <div class="col-sm-2">
    </div>

    <div class="col-sm-10">
      <div class="card-error card">
        <div class="card-body">
          <h5 class="card-title"><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h5>
          <% article.errors.full_messages.each do |message| %>
            <p class="card-text"><%= message %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>

<%= form_with(model: article, local: true) do |form| %>
<div class="form-group row">
  <div class="col-sm-2">
    <%= form.label :title %>
  </div>
  <div class="col-sm-10">
    <%= form.text_area :title, class: "form-control",  rows: "1" %>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
    <%= form.label :body %>
  </div>
  <div class="col-sm-10">
    <%= form.text_area :body, class: "form-control",  rows: "10" %>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
  </div>
  <div class="col-sm-10">
    <%= form.submit %>
  </div>
</div>
<% end %>


</div>
