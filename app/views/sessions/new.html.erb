<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
</head>

<body>
  <div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <%= form_for(:session, url: login_path) do |f| %>
      <h2 class="font-weight-bold">Simple Blog</h2>
      <h3 class="font-weight-bold">Please log in below</h3>

      <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", :class => 'form-control'%>
      <%= f.password_field :password, placeholder: "Enter your password", :class => 'form-control' %>

      <%= f.submit "Log In", :class => 'btn btn-lg btn-primary btn-block' %>
      <p class="signinfooter mt-5 mb-3 text-muted">&copy; 2018. All Rights Reserved</p>
      </div>
    </div>
    <% end %>
  </form>
</body>
