<h1>Log In </h1>

<%= form_for(:session, url: login_path) do |f| %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Enter your email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "Enter your password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log In" %>
  </div>

<% end %>
